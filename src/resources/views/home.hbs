<div class="">
    <div class="row m-2">
        <div class="col-lg-3 mt-2">
            <div class="list-group" id="list-tab" role="tablist">
                <a
                    class="list-group-item list-group-item-action active"
                    id="list-home-list"
                    data-toggle="list"
                    href="#list-home"
                    role="tab"
                    aria-controls="home"
                    >Home</a
                >
                <a
                    class="list-group-item list-group-item-action"
                    id="list-profile-list"
                    data-toggle="list"
                    href="#list-profile"
                    role="tab"
                    aria-controls="profile"
                    >Profile</a
                >
                <a
                    class="list-group-item list-group-item-action"
                    id="list-messages-list"
                    data-toggle="list"
                    href="#list-messages"
                    role="tab"
                    aria-controls="messages"
                    >Messages</a
                >
                <a
                    class="list-group-item list-group-item-action"
                    id="list-settings-list"
                    data-toggle="list"
                    href="#list-settings"
                    role="tab"
                    aria-controls="settings"
                    >Settings</a
                >
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row">
                {{#each book}}
                <div class="mt-2" style="max-width: 24%; min-width: 24%">
                    <div class="card" style="height: 100%; width: 100%">
                        <a href="/books/{{this.slug}}">
                            <img
                                class="card-img-top"
                                src="{{this.image}}"
                                alt="Card image cap"
                                style="min-height: 14rem"
                            />
                        </a>
                        <div class="card-body" style="position: relative">
                            <h6 class="card-title" style="padding-bottom: 2rem">
                                <a
                                    href="/books/{{this.slug}}"
                                    style="text-decoration: none"
                                    >{{this.title}}</a
                                >
                            </h6>
                            <button
                                type="button"
                                class="btn btn-primary"
                                data-toggle="modal"
                                data-target="#exampleModal"
                                data-whatever="@mdo"
                                style="
                                    position: absolute;
                                    bottom: 0;
                                    left: 0;
                                    right: 0;
                                    border-top-left-radius: 0;
                                    border-top-right-radius: 0;
                                "
                            >
                                Buy
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Sign Up</h3>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label"
                            >Username *</label
                        >
                        <input
                            type="text"
                            class="form-control"
                            id="recipient-name"
                            autocomplete="username"
                        />
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label"
                            >Email address</label
                        >
                        <input
                            type="text"
                            class="form-control"
                            id="message-text"
                            value="email@example.com"
                        />
                        <p style="font-size: 14px">
                            Your email address will be added to the metadata of
                            packages that you publish, so it may be seen
                            publicly.
                        </p>
                    </div>
                    <div class="form-group">
                        <label
                            for="inputPassword"
                            class="col-sm-2 col-form-label"
                            >Password</label
                        >
                        <div class="col">
                            <input
                                autocomplete="current-password"
                                type="password"
                                class="form-control"
                                id="inputPassword"
                                placeholder="Password"
                            />
                        </div>
                        <div style="display: flex; font-size: 14px">
                            <p>Minimum of 10 characters and must meet our</p>
                            <a
                                href=""
                                style="padding-right: 4px; padding-left: 4px"
                                >password</a
                            >
                            <a href="">guidelines</a>
                        </div>
                    </div>
                    <div class="form-check">
                        <input
                            class="form-check-input"
                            type="checkbox"
                            value=""
                            id="defaultCheck1"
                        />
                        <label class="form-check-label" for="defaultCheck1">
                            <span>
                                I agree to the
                                <a href="">End User License Agreement</a>
                                and the
                                <a href="">Privacy Policy</a>
                                . *
                            </span>
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                >
                    Close
                </button>
                <button type="button" class="btn btn-primary">
                    Create An Account
                </button>
            </div>
        </div>
    </div>
</div>
